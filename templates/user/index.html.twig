{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdPersonnel</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Pseudo</th>
                <th>Password</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>DateEnregistrement</th>
                <th>IdProfil</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.idPersonnel }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.dateEnregistrement ? user.dateEnregistrement|date('Y-m-d') : '' }}</td>
                <td>{{ user.idProfil }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'idPersonnel': user.idPersonnel}) }}">show</a>
                    <a href="{{ path('user_edit', {'idPersonnel': user.idPersonnel}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
